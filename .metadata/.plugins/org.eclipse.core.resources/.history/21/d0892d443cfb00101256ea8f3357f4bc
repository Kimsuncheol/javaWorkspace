package sec02;

public class DataType {
	public static void main(String[] args) {
		// DataType
		// 기본타입 8개(정수/실수/문자/논리)
		// 정수 타입 : byte / short / int / long
		// 실수 타입 : float / double
		// 문자 타입 : char
		// 논리 타입 : boolean
		// 데이터 타입에 다라 사용하는 메모리 크기가 다름
		// 메모리 크기 최소 단위 : bit (0 or 1)
		// bit가 8개가 모여서 byte 단위
		
		
		// 참조형(기본 타입만으로 표현이 어려워서 추가된 타입(객체) : String
	}
}
